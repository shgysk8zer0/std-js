export default () => {
    if (!document.querySelectorAll) {
      (function (d, s) {
        d = document;
        s = d.createStyleSheet();
        d.querySelectorAll = function (r, c, i, j, a) {
          a = d.all;
          c = [];
          r = r.replace(/\[for\b/gi, '[htmlFor').split(',');
          for (i = r.length; i--; ) {
            s.addRule(r[i], 'k:v');
            for (j = a.length; j--; ) {
    			a[j].currentStyle.k && c.push(a[j]);
    		}
            s.removeRule(0);
          }
          return c;
      };
    })();
    }
}
